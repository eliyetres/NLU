  <goal type="perform" action="make_call">
      <plan>
        <findout type="wh_question" predicate="selected_contact"/>
        <findout type="wh_question" predicate="selected_number"/>
        <dev_perform action="MakeCall" postconfirm="true"/>
      </plan>
