<?xml version="1.0" encoding="utf-8"?>
<grammar>
  <action name="top">
    <one-of>
      <item>main menu</item>
      <item>top</item>
      <item>beginning</item>
      <item>cancel</item>
      <item>forget it</item>
      <item>never mind</item>
      <item>abort</item>
    </one-of>
  </action>

  <action name="up">
    <one-of>
      <item>up</item>
      <item>back</item>
      <item>go back</item>
    </one-of>
  </action>

  <action name="make_call">
    <one-of>
      <item>make a call</item>
      <item>call</item>      
      <item>I want to call</item>
      <item>call <slot predicate="selected_contact" type="individual"/></item>
      <item>call <slot predicate="selected_contact" type="individual"/> mobile</item>
    </one-of>
  </action>

  <question speaker="user" predicate="phone_number_of_contact" type="wh_question">    
      <one-of>
          <item>tell me a phone number</item>
          <item>I want to know a contact's number</item>    
          <item>what is <slot predicate="selected_contact" type="individual"/> mobile</item>
          <item>what is <slot predicate="selected_contact" type="individual"/> number</item>           
        </one-of>
      </question>

    <individual name="mobile">mobile</individual>
    <individual name="work">work</individual>
    <individual name="home">home</individual>
  
  
    <individual name="contact_john">
      <one-of>
        <item>John</item>
        <item>John's</item>
      </one-of>
    </individual>
    <individual name="contact_mary">
      <one-of>
        <item>Mary</item>
        <item>Mary's</item>
      </one-of>
    </individual>
    <individual name="contact_andy">
      <one-of>
        <item>Andy</item>
        <item>Andy's</item>
      </one-of>
    </individual>
    <individual name="contact_lisa">
      <one-of>
        <item>Lisa</item>
        <item>Lisa's</item>
      </one-of>
    </individual>

  <question speaker="system" predicate="selected_contact" type="wh_question">
      which contact
    </question>
  
  <question speaker="system" predicate="selected_number" type="wh_question">
      which phone
    </question>


  <answer speaker="system" predicate="phone_number_of_contact">
        <slot predicate="selected_contact" type="individual"/> has number
        <slot predicate="phone_number_of_contact"/>
    </answer>


  <question speaker="all" predicate="phone_number_of_contact" type="wh_question">the contact's phone number</question>


  <report action="MakeCall" status="ended">
    Calling <slot predicate="selected_contact"/>
    <slot predicate="selected_number"/>
  </report>

  <!-- <report action="TellNumber" status="ended">
      It's <slot predicate="phone_number_of_contact"/>
    </report> -->

    <validity name="PhoneNumberAvailable">
        <slot predicate="selected_contact"/> has no phone number
      </validity>


</grammar>