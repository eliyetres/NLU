<?xml version="1.0" encoding="utf-8" ?>
<grammar>

  <action name="top">
    <one-of>
      <item>main menu</item>
      <item>top</item>
      <item>beginning</item>
      <item>cancel</item>
      <item>forget it</item>
      <item>never mind</item>
      <item>abort</item>
    </one-of>
  </action>

  <action name="up">
    <one-of>
      <item>up</item>
      <item>back</item>
      <item>go back</item>
    </one-of>
  </action>

  <individual name="city_london">
    <one-of>
      <item>London</item>
      <item>london</item>
    </one-of>
  </individual>

  <individual name="city_gothenburg">Gothenburg</individual>

  <individual name="country_uk">
    <one-of>
      <item>UK</item>
      <item>U.K.</item>
      <item>England</item>
      <item>United Kingdom</item>
    </one-of>
  </individual>
  <individual name="country_swe">Sweden</individual>
    

  <question speaker="user" predicate="temperature" type="wh_question">
    <one-of>
      <item>what is the temperature</item>
      <item>what's the temperature in <slot predicate="city_to_search"/></item>
      <item>what's the temperature in <slot predicate="city_to_search"/> <slot predicate="country_to_search"/></item>
      <item>what's the temperature in <slot predicate="country_to_search"/> <slot predicate="city_to_search"/></item>
    </one-of>
  </question>

  <question speaker="user" predicate="weather" type="wh_question">
    <one-of>
      <item>what is the current weather</item>
      <item>what's the weather in <slot predicate="city_to_search"/></item>
      <item>what's the weather in <slot predicate="city_to_search"/> <slot predicate="country_to_search"/></item> 
    </one-of>
  </question>


  <question speaker="system" predicate="city_to_search" type="wh_question">
      which city
    </question>
  
  <question speaker="system" predicate="country_to_search" type="wh_question">
      which country
    </question>

    
  <answer speaker="system" predicate="temperature"> The temperature is <slot predicate="temperature"/></answer>

  <answer speaker="system" predicate="weather">The weather is <slot predicate="weather"/></answer>

</grammar>