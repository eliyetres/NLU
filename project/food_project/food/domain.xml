    <goal type="perform" action="top">
      <plan>
        <forget_all/>
        <findout type="alt_question">
          <alt>
            <resolve type="wh_question" predicate="simple_recipe"/>
          </alt>
          <alt>
            <resolve type="wh_question" predicate="detailed_recipe"/>
          </alt>
        </findout>
      </plan>
    </goal>

    <goal type="resolve" question_type="wh_question" predicate="simple_recipe">
      <plan>
          <findout type="wh_question" predicate="query_search"/>
          <bind type="wh_question" predicate="meal_type_search"/>
          <bind type="wh_question" predicate="cuisine_search"/>
          <bind type="wh_question" predicate="diet_search"/>
          <bind type="wh_question" predicate="intolerances_search"/>         
          <bind type="wh_question" predicate="exclude_ingredients"/>
          
        <dev_query predicate="simple_recipe" type="wh_question"/>
      </plan>
    </goal> 

  <goal type="resolve" question_type="wh_question" predicate="detailed_recipe">
      <plan>
          <findout type="wh_question" predicate="query_search"/>
          <findout type="wh_question" predicate="meal_type_search"/>
          <findout type="wh_question" predicate="cuisine_search"/>
          <findout type="wh_question" predicate="diet_search"/>
          <findout type="wh_question" predicate="intolerances_search"/>                   
        <dev_query predicate="detailed_recipe" type="wh_question"/>
      </plan>
    </goal> 

</domain>
