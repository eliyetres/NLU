<?xml version="1.0" encoding="utf-8"?>
<grammar>
<!-- Menu -->
	<action name="top">
	<one-of>
		<item>main menu</item>
		<item>top</item>
		<item>beginning</item>
		<item>cancel</item>
		<item>forget it</item>
		<item>never mind</item>
		<item>abort</item>
	</one-of>
	</action>
	<action name="up">
		<one-of>
			<item>up</item>
			<item>back</item>
			<item>go back</item>
		</one-of>
	</action>

	<individual name="african">african</individual>
