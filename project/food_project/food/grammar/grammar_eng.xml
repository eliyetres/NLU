<!-- User requests -->
	<question speaker="user" predicate="recipe" type="wh_question">
			<one-of>
				<item>I need a recipe</item>
				<item>I want a recipe </item>    
			</one-of>
		</question>

<!-- Questions about parameters -->
		<question speaker="system" predicate="query" type="wh_question">what kind of food</question>
		<question speaker="system" predicate="meal_type_search" type="wh_question">what kind of meal you would like</question>
		<question speaker="system" predicate="cuisine_search" type="wh_question">
			what type of cuisine
		</question>		
		<question speaker="system" predicate="diet_search" type="wh_question">
			any specific diet, like vegan or vegetarian
		</question>	
		<question speaker="system" predicate="intolerances_search" type="wh_question">any intolerances</question>		
		<question speaker="system" predicate="exclude_ingredients" type="wh_question">do you want to exclude any ingredients</question>
<!-- Starting question -->		
		<question speaker="all" predicate="recipe" type="wh_question">what recipe are you looking for</question>
		
<!-- Answer -->
		<answer speaker="system" predicate="recipe"> The ingredients are<slot predicate="recipe"/></answer>


</grammar>
